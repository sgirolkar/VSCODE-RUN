{
  "name": "run-configurations",
  "displayName": "Run Configurations",
  "description": "Enhanced Run/Debug Configurations for VS Code",
  "version": "0.4.0",
  "publisher": "sgirolkar",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgirolkar/VSCODE-RUN"
  },
  "homepage": "https://github.com/sgirolkar/VSCODE-RUN",
  "bugs": {
    "url": "https://github.com/sgirolkar/VSCODE-RUN/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "run",
    "debug",
    "launch",
    "configuration",
    "tasks",
    "run configurations",
    "launch configurations",
    "development",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "runConfigs.editConfigurations",
        "title": "Edit Configurations...",
        "category": "Run Configs",
        "icon": "$(settings-gear)"
      },
      {
        "command": "runConfigs.runConfiguration",
        "title": "Run Configuration",
        "category": "Run Configs",
        "icon": "$(play)"
      },
      {
        "command": "runConfigs.refresh",
        "title": "Refresh",
        "category": "Run Configs",
        "icon": "$(refresh)"
      },
      {
        "command": "runConfigs.createNew",
        "title": "Create New Configuration",
        "category": "Run Configs",
        "icon": "$(add)"
      },
      {
        "command": "runConfigs.deleteConfiguration",
        "title": "Delete Configuration",
        "category": "Run Configs",
        "icon": "$(trash)"
      },
      {
        "command": "runConfigs.quickRun",
        "title": "Quick Run Configuration",
        "category": "Run Configs",
        "icon": "$(zap)"
      }
    ],
    "keybindings": [
      {
        "command": "runConfigs.editConfigurations",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      },
      {
        "command": "runConfigs.quickRun",
        "key": "ctrl+alt+q",
        "mac": "cmd+alt+q"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "runConfigs",
          "name": "Run Configurations",
          "when": "true",
          "icon": "$(play)",
          "visibility": "visible"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "runConfigs.createNew",
          "when": "view == runConfigs",
          "group": "navigation@1"
        },
        {
          "command": "runConfigs.refresh",
          "when": "view == runConfigs",
          "group": "navigation@2"
        },
        {
          "command": "runConfigs.editConfigurations",
          "when": "view == runConfigs",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "runConfigs.runConfiguration",
          "when": "view == runConfigs && viewItem =~ /^config-/",
          "group": "inline@1"
        },
        {
          "command": "runConfigs.deleteConfiguration",
          "when": "view == runConfigs && viewItem =~ /^config-/",
          "group": "danger@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.40.0"
  }
}
