{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ðŸš€ Test Simple Node App",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch TypeScript Extension",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/extension.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "--enable-source-maps"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true
        },
        {
            "name": "Debug Extension (Host)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true
        }
    ]
}
